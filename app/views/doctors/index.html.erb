
</head>
<body>

<h1>Listing doctors</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
	  <th>Image</th>
      <th>Speciality</th>
      <th>Phone</th>
      <th>Year of service</th>
	  <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
		<td><%= image_tag(doctor.image,:size=>"100x70") %></td>
        <td><%= doctor.speciality %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.year_of_service %></td>
		<td><%= doctor.email %></td>
		<% if doctorsigned_in? or nursesigned_in? %>
			<td><%= link_to 'Show', doctor %></td>
			<td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
			<td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<%end%>
      </tr>
	  <% end %>
  </tbody>
</table>

<br>
<% if doctorsigned_in? or nursesigned_in? %>
<%= link_to 'New Doctor', new_doctor_path, :class=>'btn btn-success' %>
<% end %>